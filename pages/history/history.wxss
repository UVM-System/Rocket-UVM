.history_list {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 20rpx 0;
  padding: 25rpx;
  background: white;
}
.supply_info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.supplier {
  font-weight: bold;
  font-size: 32rpx;
}
.state {
  font-size: 28rpx;
  color: rgb(110, 110, 110);
}
.orders_info {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  align-items: flex-start;
}
.img {
  width: 20%;
  margin-left: 20rpx;
}
.img image {
  width: 100%;
  height: 100%;
}
.text {
  margin-left: 40rpx;
  width: 75%;
  height: 100%;
}
.each_order_info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 32rpx;
  margin-top: 5rpx;
}
.name {
  font-size: 32rpx;
}
.price_n_number {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.price {
  font-size: 32rpx;
}
.number {
  font-size: 28rpx;
  color: darkgray;
}
.time_n_price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}
.time {
  font-size: 24rpx;
  color: darkgrey;
}
.total {
  display: flex;
  flex-direction: row;
  justify-items: flex-end;
  align-items: center;
}
.total_number{
  font-size: 28rpx;
  color: rgb(110, 110, 110);
}
.total_price{
  font-size: 34rpx;
}




